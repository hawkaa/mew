@model ProjectMew.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="m-form">
    <div>
        <section>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @*@Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />*@

                <div class="row m-header-row">
                    <div class="col-md-12">@ViewBag.Title</div>
                </div>

                <div class="row">
                    <div class="col-md-offset-4 col-md-8">@Html.ValidationSummary("", new {@class = "text-danger m-error"})</div>
                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label m-label"})
                    </div>

                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control m-textbox"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(m => m.Hometown, new {@class = "col-md-2 control-label m-label"})
                    </div>
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Hometown, new {@class = "form-control m-textbox"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label m-label"})
                    </div>

                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control m-textbox"})
                    </div>
                </div>
                <div class="row m-margin-bottom">
                    <div class="form-group col-md-5">
                        @Html.LabelFor(m => m.ConfirmPassword, "Confirm password", new {@class = "col-md-2 control-label m-label"})
                    </div>

                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control m-textbox"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" id="m-submit">
                        <div class="col-md-offset-5 col-md-7">
                            <input type="submit" class="btn btn-default m-btn" value="Register"/>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
